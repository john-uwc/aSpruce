<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--编辑框-->
    <style name="Theme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:textCursorDrawable">@drawable/g_cursor</item>
        <item name="android:textColor">@color/g_foreground_text</item>
        <item name="android:textColorHint">@color/g_foreground_text_secondary</item>
        <item name="android:textSize">@dimen/ts_15</item>
    </style>

    <!--进度条-->
    <style name="Theme.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/g_progressbar</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">45dip</item>
        <item name="android:maxHeight">45dip</item>
    </style>


    <style name="Theme.DatePicker" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/gray_4a_aff</item>
        <item name="colorAccent">@color/g_foreground</item>
    </style>

    <!--标题栏样式 -->
    <style name="Theme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>
